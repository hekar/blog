doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Ubuntu|Ubuntu+Mono')
      link(rel='stylesheet', href=locals.url + '/css/main.css')
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
          h3.title
            a(href=locals.url)= locals.name
    div#content
      p.description= locals.description
      div.content-wrap
        block content
          h2 content
    footer
      div.footer
        block footer
          hr
          section.about
            !=contents['about.md'].html
          section.copy
            p Powered by&nbsp;
            a(href='https://github.com/jnordberg/wintersmith') Wintersmith
            p &mdash;
            a(href='') #{ locals.owner }
            p &copy; #{ new Date().getFullYear() }
