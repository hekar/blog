
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  div.logo
    h1
      a(href=locals.url + '/index.html')= locals.name
    p.description= locals.description
  hr
  h1.article-title
    a(href=locals.url + '/index.html')= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)

block content
  article.article
    section.content!= typogr(page.html).typogrify()

